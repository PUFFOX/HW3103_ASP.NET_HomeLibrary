@page "{id:int}"
@model EditBookModel
@{
    ViewData["Title"] = "Edit Book";
}

<h1>Edit Book</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Book.Title"></label>
        <input asp-for="Book.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Book.Author"></label>
        <input asp-for="Book.Author" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Book.Genre"></label>
        <input asp-for="Book.Genre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Book.Publisher"></label>
        <input asp-for="Book.Publisher" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Book.Year"></label>
        <input asp-for="Book.Year" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
