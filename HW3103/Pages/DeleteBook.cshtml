@page "{id:int}"
@model DeleteBookModel
@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Book.Title"></label>
        <input asp-for="Book.Title" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Book.Author"></label>
        <input asp-for="Book.Author" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Book.Genre"></label>
        <input asp-for="Book.Genre" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Book.Publisher"></label>
        <input asp-for="Book.Publisher" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Book.Year"></label>
        <input asp-for="Book.Year" class="form-control" disabled />
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
